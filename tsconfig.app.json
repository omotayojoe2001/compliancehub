{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/lib/comprehensiveAutomationService.ts",
    "src/lib/overdueMonitoringService.ts",
    "src/lib/subscriptionReminderService.ts",
    "src/lib/vatNotificationAutomation.ts",
    "src/lib/emailService.ts",
    "src/lib/filingService.ts",
    "src/pages/AutomationTestClean.tsx",
    "src/pages/RemindersDebug.tsx",
    "src/pages/RemindersDebugFixed.tsx",
    "src/pages/EInvoicing.tsx",
    "src/pages/AdminGuides.tsx"
  ]
}
